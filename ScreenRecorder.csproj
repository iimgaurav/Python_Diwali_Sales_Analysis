    <UseWPF>true</UseWPF>
    <ApplicationIcon>icon.ico</ApplicationIcon>
    <AssemblyTitle>Screen Recorder</AssemblyTitle>
    <AssemblyDescription>Professional Screen Recording Application</AssemblyDescription>
